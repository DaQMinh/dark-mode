{
    "manifest_version": 2,
    "name": "Night Mode",
    "version": "0.9",

    "default_locale": "en",
    
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },

    "content_scripts": [{
        "all_frames": true,
        "js": [
            "content-scripts.js"
        ],
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "run_at": "document_start"
    }],

    "browser_action": {
        "default_popup": "index.html"
    },

    "permissions": [
        "storage",
        "tabs"
    ]
}