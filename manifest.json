{
    "manifest_version": 2,
    "name": "Night Mode",
    "version": "1.1",

    "default_locale": "en",

    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },

    "content_scripts": [{
        "all_frames": true,
        "js": [
            "content-scripts.js"
        ],
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "run_at": "document_start"
    }],

    "browser_action": {
        "default_popup": "index.html"
    },

    "optional_permissions": [
        "downloads"
    ],

    "permissions": [
        "storage",
        "http://*/*",
        "https://*/*"
    ],

    "update_url": "https://clients2.google.com/service/update2/crx"
}